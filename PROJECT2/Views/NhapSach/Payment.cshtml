@using EF;
@{
    List<NhaXuatBan> nxb = ViewBag.nxb as List<NhaXuatBan>;
    ViewBag.Title = "Trang chủ";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Công ty phát hành sách 22+</title>
    <link rel="stylesheet" href="/Content/bootstrap.min.css">
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/jquery-3.1.1.min.js"></script>   
</head>
<body>
    @RenderPage("/Views/Shared/header.cshtml")

    <div class="container">
        <h2><strong>Thông tin nhà xuất bản</strong></h2>
        <br />
        <div class="row">
            <form class="form-horizontal" action="/NhapSach/Payment2" method="post" >
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên nhà xuất bản</label>
                    <div class="col-xs-3">
                        <select class="form-control" name="idnxb">
                            @for(int i = 0; i < nxb.Count; i++)
                            {
                                <option value="@nxb[i].idNXB">@nxb[i].tenNXB</option>
                            }
                        </select>
                    </div>
                </div>                
                <div class="form-group">
                    <label class="control-label col-sm-2">Số điện thoại</label>
                    <div class="col-xs-3">
                        <input type="text" class="form-control" name="sdt">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Người giao</label>
                    <div class="col-xs-3">
                        <input type="text" class="form-control" name="nguoigiao">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Ngày nhập</label>
                    <div class="col-xs-3">
                        <input type='date' class="form-control" min="1970-01-01" max="3000-12-31" name="ngaynhap" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-xs-3">
                        <button type="submit" class="btn btn-primary">Xuất phiếu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>